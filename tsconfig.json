{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "CommonJS",
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "strict": true,
      "jsx": "react",
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declarationDir": "dist/types",
      "outDir": "dist/lib",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "react"
    ]
  }